cd roofing-saas

# Secret scanning (FIRST - most critical)
echo "üîí Scanning for secrets..."
if command -v gitleaks &> /dev/null; then
  gitleaks protect --staged --no-banner
  if [ $? -ne 0 ]; then
    echo "‚ùå Secrets detected! Remove them before committing."
    echo "   If this is a false positive, add pattern to .gitleaks.toml"
    exit 1
  fi
else
  echo "‚ö†Ô∏è  gitleaks not installed - skipping secret scan (install with: brew install gitleaks)"
fi

# Run lint-staged (ESLint on staged files)
npx lint-staged

# TypeScript type checking
npm run typecheck

# Theme compliance check
echo "üé® Checking theme compliance..."
node scripts/check-theme-compliance.js
if [ $? -ne 0 ]; then
  echo "‚ùå Theme violations detected. Fix violations or add to .theme-exceptions.json"
  exit 1
fi

echo "‚úÖ All pre-commit checks passed!"
