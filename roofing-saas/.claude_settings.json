{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(components/layout/Sidebar.tsx)",
      "Edit(components/layout/Sidebar.tsx)",
      "Write(app/[locale]/(dashboard)/knocks/)",
      "Edit(app/[locale]/(dashboard)/knocks/)",
      "Write(app/[locale]/(dashboard)/territories/)",
      "Edit(app/[locale]/(dashboard)/territories/)"
    ]
  }
}