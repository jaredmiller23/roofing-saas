{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(app/(dashboard)/**/*.tsx)",
      "Edit(app/(dashboard)/**/*.tsx)",
      "Write(app/[locale]/(dashboard)/**/*.tsx)",
      "Edit(app/[locale]/(dashboard)/**/*.tsx)",
      "Write(app/api/**/*.ts)",
      "Edit(app/api/**/*.ts)",
      "Write(components/**/*.tsx)",
      "Edit(components/**/*.tsx)",
      "Write(lib/**/*.ts)",
      "Edit(lib/**/*.ts)"
    ]
  }
}