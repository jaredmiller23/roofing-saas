{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(app/(dashboard)/projects/[id]/edit/page.tsx)",
      "Edit(app/(dashboard)/projects/[id]/edit/page.tsx)",
      "Write(app/(dashboard)/projects/[id]/**/*.tsx)",
      "Edit(app/(dashboard)/projects/[id]/**/*.tsx)",
      "Write(app/(dashboard)/pipeline/**/*.tsx)",
      "Edit(app/(dashboard)/pipeline/**/*.tsx)"
    ]
  }
}