{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(**/*.test.ts)",
      "Edit(**/*.test.ts)",
      "Write(**/*.test.tsx)",
      "Edit(**/*.test.tsx)",
      "Write(**/*.ts)",
      "Edit(**/*.ts)",
      "Write(**/*.tsx)",
      "Edit(**/*.tsx)",
      "Write(**/*.js)",
      "Edit(**/*.js)",
      "Write(**/*.jsx)",
      "Edit(**/*.jsx)"
    ]
  }
}