{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(components/theme/ThemeProvider.tsx)",
      "Edit(components/theme/ThemeProvider.tsx)",
      "Write(components/theme/ThemeToggle.tsx)",
      "Edit(components/theme/ThemeToggle.tsx)",
      "Write(lib/hooks/useTheme.ts)",
      "Edit(lib/hooks/useTheme.ts)",
      "Write(styles/themes/dark.css)",
      "Edit(styles/themes/dark.css)",
      "Write(app/layout.tsx)",
      "Edit(app/layout.tsx)",
      "Write(app/(dashboard)/layout.tsx)",
      "Edit(app/(dashboard)/layout.tsx)",
      "Write(tailwind.config.ts)",
      "Edit(tailwind.config.ts)",
      "Write(components/settings/appearance-settings.tsx)",
      "Edit(components/settings/appearance-settings.tsx)"
    ]
  }
}