{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(src/components/**/*.tsx)",
      "Edit(src/components/**/*.tsx)",
      "Write(src/components/**/*.ts)",
      "Edit(src/components/**/*.ts)",
      "Write(**/*.test.tsx)",
      "Edit(**/*.test.tsx)",
      "Write(src/components/**/*.tsx)",
      "Edit(src/components/**/*.tsx)",
      "Write(src/components/**/*.ts)",
      "Edit(src/components/**/*.ts)"
    ]
  }
}