{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(components/auth/MFASetup.tsx)",
      "Edit(components/auth/MFASetup.tsx)",
      "Write(components/auth/MFAChallenge.tsx)",
      "Edit(components/auth/MFAChallenge.tsx)",
      "Write(app/(dashboard)/settings/**)",
      "Edit(app/(dashboard)/settings/**)",
      "Write(lib/auth/**)",
      "Edit(lib/auth/**)"
    ]
  }
}