{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(lib/types/project-template.ts)",
      "Edit(lib/types/project-template.ts)",
      "Write(components/projects/TemplateSelector.tsx)",
      "Edit(components/projects/TemplateSelector.tsx)",
      "Write(components/projects/TemplateLibrary.tsx)",
      "Edit(components/projects/TemplateLibrary.tsx)",
      "Write(components/projects/TemplateEditor.tsx)",
      "Edit(components/projects/TemplateEditor.tsx)",
      "Write(app/(dashboard)/settings/templates/page.tsx)",
      "Edit(app/(dashboard)/settings/templates/page.tsx)",
      "Write(app/api/project-templates/route.ts)",
      "Edit(app/api/project-templates/route.ts)",
      "Write(app/api/project-templates/[id]/route.ts)",
      "Edit(app/api/project-templates/[id]/route.ts)",
      "Write(lib/data/default-templates.ts)",
      "Edit(lib/data/default-templates.ts)",
      "Write(app/(dashboard)/projects/new/page.tsx)",
      "Edit(app/(dashboard)/projects/new/page.tsx)",
      "Write(components/projects/project-form.tsx)",
      "Edit(components/projects/project-form.tsx)"
    ]
  }
}