{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(components/dashboard/DashboardMetrics.tsx)",
      "Edit(components/dashboard/DashboardMetrics.tsx)",
      "Write(components/dashboard/ActivityFeed.tsx)",
      "Edit(components/dashboard/ActivityFeed.tsx)",
      "Write(components/dashboard/WeeklyChallengeWidget.tsx)",
      "Edit(components/dashboard/WeeklyChallengeWidget.tsx)"
    ]
  }
}