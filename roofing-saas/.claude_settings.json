{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(lib/signatures/**)",
      "Edit(lib/signatures/**)",
      "Write(package.json)",
      "Edit(package.json)"
    ]
  }
}