{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(app/**/*.tsx)",
      "Edit(app/**/*.tsx)",
      "Write(components/**/*.tsx)",
      "Edit(components/**/*.tsx)"
    ]
  }
}