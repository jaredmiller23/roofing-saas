{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(**/*.ts)",
      "Edit(**/*.ts)",
      "Write(**/*.tsx)",
      "Edit(**/*.tsx)"
    ]
  }
}