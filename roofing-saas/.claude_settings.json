{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(components/ui/skeleton-patterns.tsx)",
      "Edit(components/ui/skeleton-patterns.tsx)",
      "Write(components/ui/empty-state.tsx)",
      "Edit(components/ui/empty-state.tsx)",
      "Write(components/dashboard/**/*.tsx)",
      "Edit(components/dashboard/**/*.tsx)",
      "Write(components/settings/**/*.tsx)",
      "Edit(components/settings/**/*.tsx)",
      "Write(components/pipeline/**/*.tsx)",
      "Edit(components/pipeline/**/*.tsx)",
      "Write(app/(dashboard)/**/page.tsx)",
      "Edit(app/(dashboard)/**/page.tsx)"
    ]
  }
}