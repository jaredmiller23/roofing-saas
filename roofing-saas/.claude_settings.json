{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(app/(dashboard)/signatures/page.tsx)",
      "Edit(app/(dashboard)/signatures/page.tsx)",
      "Write(components/signatures/SignatureDocuments.tsx)",
      "Edit(components/signatures/SignatureDocuments.tsx)",
      "Write(app/api/signatures/documents/route.ts)",
      "Edit(app/api/signatures/documents/route.ts)",
      "Write(app/api/signatures/documents/[id]/route.ts)",
      "Edit(app/api/signatures/documents/[id]/route.ts)"
    ]
  }
}