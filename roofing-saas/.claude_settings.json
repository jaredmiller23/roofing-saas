{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read(./**)",
      "Glob(./**)",
      "Grep(./**)",
      "Bash(*)",
      "Write(app/[locale]/(dashboard)/field/call/page.tsx)",
      "Edit(app/[locale]/(dashboard)/field/call/page.tsx)",
      "Write(app/[locale]/(dashboard)/field/today/page.tsx)",
      "Edit(app/[locale]/(dashboard)/field/today/page.tsx)",
      "Write(app/[locale]/(dashboard)/field/me/page.tsx)",
      "Edit(app/[locale]/(dashboard)/field/me/page.tsx)",
      "Write(components/layout/AdaptiveLayout.tsx)",
      "Edit(components/layout/AdaptiveLayout.tsx)",
      "Write(components/layout/DashboardLayoutClient.tsx)",
      "Edit(components/layout/DashboardLayoutClient.tsx)"
    ]
  }
}