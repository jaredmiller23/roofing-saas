{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "app/api/photos/upload/route.ts": {
      "maxDuration": 60
    },
    "app/api/project-files/upload/route.ts": {
      "maxDuration": 60
    },
    "app/api/dashboard/consolidated/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-tasks",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/process-workflows",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/process-campaigns",
      "schedule": "0 10 * * *"
    }
  ]
}
