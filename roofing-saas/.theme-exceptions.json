  "rationale": {
    "status-indicators": "Status colors (green/red/orange/yellow) have universal semantic meaning and should remain consistent regardless of theme.",
    "charts": "Data visualization requires specific colors for clarity and cannot use theme variables.",
    "star-ratings": "Yellow stars are a universal pattern that should remain consistent.",
    "gamification": "Achievement badges and point systems use semantic colors for instant recognition.",
    "gamification-settings": "Tab navigation and templates use color-coding (blue=points, purple=achievements, orange=challenges, pink=rewards, green=KPIs) for visual categorization and template identification.",
    "pipeline-settings": "Visual pipeline stage cards use dynamic user-chosen background colors; text-white ensures contrast on any background color."
  },
  "enforcementRules": {
    "errors": [
      "bg-white (use bg-card or bg-background)",
      "bg-gray-50/100/900/950 (use bg-muted or bg-sidebar)",
      "bg-blue-*/bg-purple-* (use bg-primary)",
      "border-gray-* (use border-border)",
      "from-gray-*/to-gray-* (use from-sidebar, to-slate)"
    ],
    "warnings": [
      "text-white (use text-foreground)",
      "text-gray-* (use text-muted-foreground)",
      "focus:ring-blue-* (use focus:ring-primary)"
    ],
    "allowed": [
      "bg-green-500/bg-red-500/bg-orange-500/bg-yellow-500 (status indicators only)",
      "fill-* and stroke-* (charts only)",
      "text-green-*/text-red-*/text-orange-*/text-yellow-* (status text only)"
    ]
  },
  "usage": {
    "scanner": "node scripts/check-theme-compliance.js",
    "preCommit": "Automatically runs via .husky/pre-commit hook",
    "addException": "Add pattern in format: 'path/pattern:line:color-class' or use '*' for any line"
  },
  "examples": {
    "allowSpecificLine": "components/ui/badge.tsx:42:bg-green-500",
    "allowAllLinesInFile": "components/ui/badge.tsx:*:bg-green-500",
    "allowAllFilesInDir": "components/charts/*:*:fill-blue-500",
    "allowAllFilesRecursive": "components/gamification/**:*:bg-yellow-500"
  }
